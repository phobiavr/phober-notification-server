{
    "openapi": "3.0.0",
    "info": {
        "title": "Phober - Notification Server",
        "contact": {
            "name": "Hikmat",
            "url": "https://www.linkedin.com/in/abdukhaligov/",
            "email": "hikmat.pou@gmail.com"
        },
        "version": "V 1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8888",
            "description": "localhost"
        }
    ],
    "paths": {
        "/support/message": {
            "post": {
                "tags": [
                    "Support"
                ],
                "summary": "Send message to support",
                "operationId": "supportMessage",
                "parameters": [
                    {
                        "name": "subject",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "message",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok"
                    }
                },
                "security": [
                    {
                        "auth.server": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "auth.server": {
                "type": "http",
                "description": "Authorization token obtained from logging in.",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer"
            }
        }
    }
}